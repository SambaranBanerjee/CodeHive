{
  "compilerOptions": {
    "target": "ES2020",                      
    "module": "CommonJS",                    
    "rootDir": "src",                        
    "outDir": "dist",                        
    "strict": true,                          
    "esModuleInterop": true,                 
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,               
    "types": ["node"],                       
    "moduleResolution": "node",              
    "allowJs": false,                        
    "noImplicitAny": true                    
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
